.container{
  height: 100vh;
  overflow: hidden;
}


.notice_search{
  background-color: #F2F2F2;
  padding: 30rpx 60rpx;
}
.notice_search_view{
  position: relative;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #fff;
}
.notice_search_input{
  flex: 1;
  font-size: 24rpx;
  padding-left: 30rpx;
  height: 100%;
}
.notice_search_view .iconfont{
  width: 60rpx;
  height: 60rpx;
  padding-right: 10rpx;
}


.order_list{
  font-size: 34rpx;
  height: calc(100vh - 240rpx);
  flex: 1;
  box-sizing: border-box;
}

.order_item{
  position: relative;
  margin-bottom: 30rpx;
  background: #ffffff;
}
.order_item_header{
  position: relative;
  padding: 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: flex-end;
  font-size: 28rpx;
  color: #212121;
  background-color: #fff;
}
.item-wuliu{
  font-size: 50rpx;
  padding-bottom: 45rpx;
}
.order_item_photo{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}
.order_item_text{
  line-height: 40rpx;
}
.order_item_body{
  flex: 1;
  padding-left: 30rpx;
  border-top: 3rpx solid #F3F3F3;
  border-bottom: 3rpx solid #F3F3F3;
  background-color: #fff;
}
.order_item_image{
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  padding: 20rpx 0;
}
.order_item_info{
  align-self: stretch;
  color: #999;
  font-size: 28rpx;
  padding: 20rpx 0;
  margin-left: 30rpx;
  line-height: 1.6;
  flex: 1;
}
.order_item_info_name{
  font-size: 32rpx;
  justify-content: space-between;
}
.icon-right.iconfont{
  flex-shrink: 0;
  color: #bbb;
  font-size: 32rpx;
  width: 60rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 3rpx solid #F3F3F3;
  border-bottom: 3rpx solid #F3F3F3;
}
.order_item_footer{
  padding: 0 30rpx 20rpx;
  align-items: flex-end;
  background-color: #fff;
}
.order_item_footer_text{
  color: #666;
  font-size: 28rpx;
  margin: 20rpx 0 40rpx;
}
.order_item_footer_text text{
  padding: 0 10rpx;
}
.order_item_footer_button{
  font-size: 28rpx;
  font-weight: 400;
  font-family: inherit;
  text-decoration: none;
  text-align: center;
  padding: 0 20rpx;
  margin: 0 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
}