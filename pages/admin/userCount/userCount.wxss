page{
  padding-top: 150rpx;
}
ec-canvas {
  margin-top: 10rpx;
  width: 100%;
  height: 100%;
}

.charts_title{
  font-size: 28rpx;
  padding: 0 10rpx 20rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 130rpx;
  z-index: 999;
}
.charts_title picker,.charts_title input,.chatrs_btn{
  padding: 0 20rpx;
}
.charts_border{
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx #666;
  background-color: rgba(0, 0, 0, .1);
  margin-top: 10rpx;
}
.charts_btn{
  font-size: 28rpx;
  margin: 0 20rpx;
  padding-top: 0;
  padding-bottom: 0;
}


.charts-table{
  display: block;
  width: 100%;
  overflow-x: auto;
}
.table{
  display: table;
  border-collapse: collapse;
  text-align: center;
  font-size: 28rpx;
  min-width: 100%;
  white-space: nowrap;
}
.table-head{
  display: table-header-group;
  vertical-align: middle;
  border-color: inherit;
}
.table-body{
  display: table-row-group;
  vertical-align: middle;
  border-color: inherit;
}
.table-tr{
  display: table-row;
  vertical-align: inherit;
  border-color: inherit;
}
.table .table-body .table-tr:nth-of-type(odd) {
  background-color: rgba(0,0,0,.05);
}
.table-td{
  display: table-cell;
  padding: 10rpx;
  vertical-align: middle;
  border-top: 1px solid #dee2e6;
}
.charts-table-more{
  font-size: 28rpx;
  padding: 10rpx;
  border-top: 1px solid #dee2e6;
  background-color: rgba(0,0,0,.05);
}