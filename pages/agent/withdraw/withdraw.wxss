.withdraw_title{
  height: 240rpx;
  padding: 0 50rpx;
  justify-content: center;
}
.withdraw_title_number{
  font-size: 60rpx;
}
.withdraw_title_text{
  font-size: 28rpx;
  opacity: 0.7;
}

.withdraw_bank{
  background-color: #fff;
  padding: 20rpx 0;
}
.withdraw_bank_image{
  height: 100rpx;
  width: 100rpx;
}
.withdraw_bank_info{
  flex: 1;
  padding: 0 30rpx;
}
.withdraw_bank_name{
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
.withdraw_bank_number{
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
}

.withdraw_content{
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0 30rpx;
}
.withdraw_item{
  height: 110rpx;
  border-bottom: 3rpx solid #D6D6D6;
}
.withdraw_item:last-child{
  border-bottom: none;
}
.withdraw_item .iconfont{
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #999; 
}
.withdraw_item .main_line{
  height: 40rpx;
}
.withdraw_input{
  flex: 1;
  padding: 0 26rpx;
  font-size: 26rpx;
}

.withdraw_button{
  height: 120rpx;
  border-radius: 60rpx;
  position: absolute;
  bottom: 50rpx;
  left: 55rpx;
  right: 55rpx;
  font-size: 32rpx;
}