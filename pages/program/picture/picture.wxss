.header_container{
  min-height: 100vh;
  overflow: hidden;
  position: relative;
  background-color: #fff;
  justify-content: flex-start;
  align-items: center;
}

.image{
  width: 100%;
  height: 100%;
}
.frame{
  position: relative;
  width: 80vw;
  height: 80vw;
  border: 2px solid #000;
  box-shadow: 0 0 30rpx #000;
  margin-bottom: 20px;
  margin-top: calc(50vh - 103px - 40vw);
}
.frame::after{
  content: '';
  position: absolute;
  top: -50vh;
  left: -10vw;
  right: -10vw;
  bottom: -50vh;
  width: 100%;
  height: 100%;
  border: 1px solid #ccc;
  border-width: 50vh 10vw;
}
.frame image{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.frame canvas{
  position: relative;
}

.header_input{
  background-color: #fff;
  text-align: center;
  color: #000;
}
.header_button{
  flex: inherit;
  width: 530rpx;
  border-radius: 10rpx;
  margin: 6px 0;
  height: 50px;
}
.main_bg::after{
  border-radius: 10rpx;
  overflow: hidden;
}