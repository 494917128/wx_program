@import '/components/myGotoLogin/myGotoLogin.wxss';

.class_image{
  width: 100%;
  height: 470rpx;
}
.class_info{
  padding: 30rpx 40rpx;
  border-bottom: 20rpx solid #f2f2f2;
}
.class_title{
  font-size: 36rpx;
  line-height: 1.5;
  font-weight: bold;
}
.class_desc{
  align-items: center;
  font-size: 24rpx;
  line-height: 1.6;
  color: #999;
  padding-top: 10rpx;
}
.class_desc > text{
  padding-left: 120rpx;
}
.class_desc > text .iconfont{
  position: relative;
  top: 5rpx;
}
.class_intro{
  padding: 40rpx;
}
.class_list{
  padding: 40rpx 0;
}
.class_list_title{
  font-size: 36rpx;
  padding: 0 40rpx;
  font-weight: bold;
  align-items: center;
}
.class_list_title_before{
  height: 32rpx;
  width: 8rpx;
  margin-right: 20rpx;
}
.class_item{
  border-bottom: 3rpx solid #f2f2f2;
  padding: 30rpx 40rpx;
}
.class_item.not_open{
  background-color: #f2f2f2;
  opacity: .7;
}
.class_item_title{
  font-size: 32rpx;
  line-height: 1.5;
  padding-bottom: 10rpx;
}
.class_item_time{
  align-items: center;
  font-size: 24rpx;
  line-height: 2;
  color: #999;
}
.class_item_time > text{
  padding-left: 60rpx;
}
.class_item_time > text .iconfont{
  position: relative;
  top: 5rpx;
}