.class_list{
  padding: 30rpx 40rpx;
  border-bottom: 1px solid #f2f2f2;
}
.class_image{
  width: 240rpx;
  height: 180rpx;
  flex-shrink: 0;
}
.class_content{
  justify-content: space-between;
  flex: 1;
  padding-left: 30rpx;
}
.class_title{
  font-weight: bold;
  font-size: 32rpx;
  line-height: 1.6;
}
.class_desc{
  align-items: center;
  font-size: 24rpx;
  line-height: 1.6;
  color: #999;
  padding-top: 10rpx;
}
.class_desc > text{
}
.class_desc > text .iconfont{
  position: relative;
  top: 5rpx;
}
.class_fee{
  font-size: 24rpx;
  padding-top: 10rpx;
}