@import '/components/myGotoLogin/myGotoLogin.wxss';

slider{
  margin: 0;
}
.main_container{
  height: 100vh;
  overflow: hidden
}
.class_scroll{
  flex: 1;
  overflow: hidden;
  max-height: 100vh;
}

.class_foot_bar{
  display: flex;
  height: 110rpx;
  background-color: #fff;
  border-bottom: 3rpx solid #f2f2f2;
  z-index: 9;
}
.class_foot_item{
  flex:1;
  font-size: 24rpx;
  line-height: 1.4;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.class_foot_item .iconfont{
  font-size: 44rpx;
}

/* 语音 */
.class_foot_record{
  background-color: #fff;
  height: 380rpx;
  margin-bottom: -380rpx;
  opacity: 0;
  box-sizing: border-box;
  z-index: 9;
  transition: all 0.3s;
}
.recorde_text{
  font-size: 28rpx;
  color: #999;
}
.recorde_view{
  font-size: 40rpx;
  margin: 40rpx;
  width: 190rpx;
  height: 190rpx;
  border-radius: 50%;
  border-width: 5rpx;
  box-sizing: border-box;
}
.recorde_btn{
  width: 162rpx;
  height: 162rpx;
  border-radius: 50%;
  position: relative;
}
.recorde_btn::before{
  content: "";
  position: absolute;
  bottom: -40rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #e51c23;
}
.recorde_btn::after{
  content: "单击";
  position: absolute;
  text-align: center;
  font-size: 28rpx;
  bottom: -80rpx;
  left: 0;
  right: 0;
  margin: auto;
}
.recorde_btn_stop{
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
}

/* 文字 */
.class_foot_text{
  align-items: flex-end;
  background-color: #fff;
  opacity: 0;
  box-sizing: border-box;
  z-index: 9;
  min-height: 100rpx;
  max-height: 0rpx;  
  margin-bottom: -100rpx;
  transition: all 0.3s;
}
.class_foot_text textarea{
  flex: 1;
  font-size: 28rpx;
  min-height: 48rpx;
  max-height: 316rpx;
  overflow: hidden;
  background-color: #EBEBEB;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
  margin: 16rpx 10px;
}
.class_foot_text .class_foot_btn{
  height: 80rpx;
  border-radius: 40rpx;  
  flex: initial;
  padding: 0 30rpx;
  margin: 16rpx 0;
  margin-right: 10rpx;
}


.class_foot_show{
  margin-bottom: 0;
  opacity: 1;
  max-height: 380rpx;
}


/* 列表 */
.class_container{
  padding-top: 40rpx;
}

.class_info{
  margin: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 0 8rpx #dcdcdc;
  font-size: 28rpx;
  line-height: 1.4;
  padding: 30rpx 40rpx;
}
.class_info_title{
  font-size: 32rpx;
  font-weight: bold;
}
.class_info text{
  padding: 10rpx 0;
}

.class_view{
  padding-right: 80rpx;
  position: relative;
}
.class_hidden{
  position: absolute;
  top: calc(100rpx - 50vh);
  left: 0;
}
.class_photo{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin: 0 20rpx;
  flex-shrink: 0;
}
.class_name{
  font-size: 26rpx;
  line-height: 2;
}
.class_text{
  font-size: 30rpx;
  padding: 20rpx 20rpx;
  border-radius: 10rpx;
  background-color: #B0E65C;
  align-self: flex-start;
  position: relative;
}
.class_image{
  border-radius: 10rpx;
  box-shadow: 0 0 8rpx #ccc;
  width: 300rpx;
  height: 270rpx;
}
.audio_prompt{
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}
.class_delete{
  height: 50rpx;
  align-self: flex-end;
  color: #999;
  font-size: 24rpx;
  line-height: 2;
}
.class_delete_text{
  margin-left: 40rpx;
}
.class_delete_text:first-child{
  margin-left: 0
}
.class_move{
  color: #000;
  width: 100vw;
  display: block;
  background-color: #dcdcdc;
  font-size: 24rpx;
  line-height: 2;
  margin-left: -130rpx;
  text-align: right;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.class_move_first{
  margin-left: 0;
}



.canvas_hidden{
  position: fixed;
  left: -902px;
  top: -1604px;
  width: 902px;
  height: 1604px;
}