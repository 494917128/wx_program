@import '/components/myGotoLogin/myGotoLogin.wxss';
@import '/pages/program/notice/notice.wxss';

.case_img_view{
  padding: 9rpx;
  display: flex;
  flex-wrap: wrap;
}
.case_img{
  width: 226rpx;
  margin: 9rpx;
  height: 226rpx;
  background-color: #fff;
  border: 3rpx solid #dcdcdc;
  box-sizing: border-box;
  box-shadow: 4rpx 4rpx 4rpx #dcdcdc;
  display: block;
}

.case_item_label{
  display: inline-flex;
  font-size: 26rpx;
  height: 54rpx;
  padding: 0 20rpx;
  border-radius: 10rpx;
  margin-left: 16rpx;
  margin-top: 10rpx;
}
.case_label_view{
  border-bottom: 3rpx solid #dcdcdc;
  flex-wrap: wrap;
  padding-bottom: 10rpx;
  margin-left: -16rpx;
  justify-content: center;
}
.case_label_view .iconfont{
  width: 60rpx;
  font-size: 40rpx;
  flex-shrink: 0;
}
.case_label_scroll{
  white-space: nowrap;
  width: 690rpx;
  border-right: 3rpx solid #dcdcdc;
  box-sizing: border-box;
}

.case_label_more{
  position: fixed;
  opacity: 0;
  top: 100%;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  padding: 70rpx 30rpx;
  z-index: 1;
  transition: all 0.3s;
}
.case_label_more.active{
  opacity: 1;
  top: 132rpx;
}
.case_label_close{
  background-color: #999;
  color: #fff;
  position: absolute;
  top: 20rpx;
  right: 16rpx;
  height: 50rpx;
  width: 50rpx;
  font-size: 24rpx;
  border-radius: 50%;
  overflow: hidden;
}


.case_video{
  width: 100%;
  height: 422rpx;
  position: relative;
  margin: 30rpx 0;
}
.case_video image{
  width: 100%;
  height: 100%;
}
.case_video_title{
  background-color: rgba(0, 0, 0, 0.3);
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}