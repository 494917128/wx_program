.login_logo{
  height: 750rpx;
  margin-top: -250rpx;
  padding-top: 250rpx;
  position: relative;
  border-radius: 50%;
  box-shadow: 0 30rpx 60rpx #FFEFD6;
  box-sizing: border-box;
}
.login_logo_image{
  width: 220rpx;
  height: 220rpx;
}
.login_cover{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: -30rpx;
  background: linear-gradient(to right, rgba(255, 255, 255, 1), rgba(255, 255, 255, 0.0), rgba(255, 255, 255, 1))
}

.login_input_view{
  margin: 30rpx 60rpx 0;
  background-color: #F3F3F3;
  height: 100rpx;
}
.login_input_view .iconfont{
  width: 80rpx;
  text-align: center;
  color: #999;
}
.login_input{
  font-size: 25rpx;
  flex: 1;
}
.login_code{
  font-size: 28rpx;
  width: 200rpx;
  height: 100%;
  padding: 0;
}
.login_code.active{
  opacity: 0.7;
}

.login_button_view{
  padding: 10rpx 0;
}
.login_button{
  margin: 30rpx 60rpx;
  width: 630rpx;
}
.login_label{
  position: fixed;
  top: 70rpx;
  right: -25rpx;
  font-size: 26rpx;
  height: 60rpx;
  padding-left: 30rpx;
  padding-right: 50rpx;
}