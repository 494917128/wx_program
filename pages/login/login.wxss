.login_logo{
  height: 340rpx;
  box-shadow: 0 0 100rpx #dcdcdc;
}
.login_logo_image{
  width: 200rpx;
  height: 200rpx;
}
.login_button_view{
  position: relative;
  top: -40rpx;
}
.login_button{
  margin: 0 20rpx;
}

.login_title{
  font-size: 24rpx;
  padding: 0 30rpx;
}
.login_swiper{
  padding: 50rpx 0;
  height: 200rpx;
}
.login_swiper_content{
  width: 80%;
  margin: 0 10%;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  box-shadow: -8rpx 5rpx 10rpx #dcdcdc;
}
.login_swiper_image{
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.login_swiper_info{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 60rpx;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.5));
  padding: 0 20rpx;
  color: #fff;
  font-size: 28rpx;
  align-items: center;
}

.login_more{
  flex-wrap: wrap;
  padding: 20rpx 0;
}
.login_more_item{
  width: 270rpx;
  height: 160rpx;
  box-shadow: 0 0 10rpx #03A9FE;
  margin: 16rpx 60rpx 16rpx 30rpx;
  position: relative;
  padding: 30rpx 20rpx;
  color: #666;
  box-sizing: border-box;
  font-size: 24rpx;
}
.login_more_photo{
  position: absolute;
  top: 0;
  bottom: 0;
  right: -60rpx;
  margin: auto;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  box-shadow: 0 0 10rpx #03A9FE;  
}
